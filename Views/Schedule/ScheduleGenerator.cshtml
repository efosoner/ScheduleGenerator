<head>

    <script>
        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("button", ev.target.id);
        }

        function drop(ev) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("button");
            if ($(ev.target).hasClass("card-body")) {
                var target = ev.target;
                target.appendChild(document.getElementById(data));
            }
            else {
                var target = $(ev.target).closest("div");
                target.append(document.getElementById(data));
            }
            console.log(target);

        }
    </script>
</head>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
